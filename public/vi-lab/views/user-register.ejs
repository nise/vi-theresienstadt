
<% layout('layout') -%>

<h2>Registrierung</h2>
  <p>
    <div class="edit-form">
      
      <% if (errors) { %>
      	<% errors.forEach(function(err){  %>
		      <div><%= err.msg %></div>
		     <% }) %> 
      <% } %>
      <form action="/users/register" method="post" accept-charset="utf-8">
        <br>
				<label>E-Mail:</label>
				<input type="text" name="email" value="<% if (email) { %><%= email %><% } %>" />
        <br>
        <label>Benutzername:</label>
				<input type="text" name="username" value="<% if (username) { %><%= username %><% } %>" />
        <br>
				<label>Passwort:</label>
				<input type="passord" name="password" value="<% if (password) { %><%= password %><% } %>" />
				 <br>
        <div class="buttons">
        	<button class="edit-btn" type="submit">registrieren</button>  <a href="/users/">cancel</a> 
        </div>
      </form>
    </div>
  </p>

