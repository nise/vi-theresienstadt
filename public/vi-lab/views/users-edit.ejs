<% layout('admin-layout') -%>
 
 
<h2>
	<img width="20" src="/vi-lab/img/user-icons/user-<%= item.id %>.png" /> 
	Edit user: <a href="/users/<%= item._id %>"><%= item.username %></a></h2> 
  <p>
    <div class="edit-form">
      
      
      <form action="/users/update/<%= item._id %>" method="post" accept-charset="utf-8">
        <br>
				<label>Benutzername:</label>
        <input type="text" name="username" value="<%= item.username %>" />
        <br>
				<label>Name:</label>
				<input type="text" name="name" value="<%= item.name %>" />
        <br>
				<label>Vorname:</label>
				<input type="text" name="firstname" value="<%= item.firstname %>" />
        <br>
				<label>Rolle:</label>
				<input type="text" name="role" value="<%= item.role %>" />
        <br>
				<label>E-Mail:</label>
				<input type="text" name="email" value="<%= item.email %>" />
        <br>
				<label>Passwort:</label>
				<input type="passord" name="password" value="<%= item.password %>" />
				 <br>
        <div class="buttons">
        	<button type="submit">update</button>  <a href="/admin/users/">cancel</a> <a class="alert-btn" href="/users/destroy/<%= item._id %>" title="Delete this item item">delete</a>
        </div>
      </form>
    </div>
  </p>

